                    package_install "hyphen-fr hyphen hunspell-fr hunspell mythes-fr libmythes"
                    ;;
                2)
                    package_install "calligra calligra-l10n-fr"
                    package_install "hyphen-fr hyphen hunspell-fr hunspell mythes-fr libmythes"
                    ;;
                "f")
                    break
                    ;;
                *)
                    invalid_option
                    ;;
            esac
        done
    elihw
    done
    }
